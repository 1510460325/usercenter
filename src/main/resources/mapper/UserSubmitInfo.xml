<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kelab.usercenter.dal.dao.UserSubmitInfoMapper">

    <resultMap id="BaseResultMap" type="com.kelab.usercenter.dal.model.UserSubmitInfoModel">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="user_id" property="userId" jdbcType="INTEGER"/>
        <result column="ac_num" property="acNum" jdbcType="INTEGER"/>
        <result column="submit_num" property="submitNum" jdbcType="INTEGER"/>
    </resultMap>

    <sql id="Base_Column_List">
        `id`, `user_id`, `ac_num`, `submit_num`
    </sql>

    <insert id="save" useGeneratedKeys="true" keyProperty="id">
        insert into `User_submit_info` (`id`, `user_id`, `ac_num`, `submit_num`)
        values (#{record.id,jdbcType=INTEGER}, #{record.userId,jdbcType=INTEGER}, #{record.acNum,jdbcType=INTEGER}, #{record.submitNum,jdbcType=INTEGER})
    </insert>


    <select id="queryByUserId" resultMap="BaseResultMap" parameterType="java.lang.Integer">
        select
        <include refid="Base_Column_List"/>
        from `User_submit_info`
        where `user_id` = #{userId,jdbcType=INTEGER}
    </select>


</mapper>